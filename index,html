  <script>
    let selectedStyle = null;

    function selectStyle(btn, style) {
      document.querySelectorAll('.styles button').forEach(b => b.classList.remove('selected'));
      btn.classList.add('selected');
      selectedStyle = style;
      document.getElementById('styleLabel').innerText = style;
    }

    function recommendStyle(style) {
      if (!style) style = "losowym";
      alert(`Proponowana stylizacja (${style}):\n1) Outfit g≈Ç√≥wny\n2) Alternatywa 1\n3) Alternatywa 2`);
    }
